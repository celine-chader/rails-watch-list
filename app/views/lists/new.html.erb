<div class="container mt-3">
  <div class="form">
    <h2>Add a new list</h2>
    <form>
      <div class="form-group">
        <%= simple_form_for(@list) do |f| %>
          <%= f.input :name %>
          <%= f.submit class:"btn btn-dark" %>
        <% end %>
      </div>
    </form>
  </div>

    <div>
      <%= link_to lists_path do %>
        <button class="btn btn-outline-dark mt-4">Back to lists</button>
      <% end %>
    </div>

</div>
